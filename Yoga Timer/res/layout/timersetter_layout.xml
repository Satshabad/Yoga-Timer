<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
				android:orientation="vertical"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
				
				<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:gravity="center">
				<TextView 
				android:text="0"
				android:id="@+id/time_display_fourth_digit"
				android:textSize="80dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/white_text"
			/>
			<TextView 
				android:text="0"
				android:id="@+id/time_display_third_digit"
				android:textSize="80dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/white_text"
			/>
			<TextView 
				android:text=":"
				android:id="@+id/time_display_colon"
				android:textSize="80dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/white_text"
			/>
			<TextView 
				android:text="0"
				android:id="@+id/time_display_second_digit"
				android:textSize="80dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/white_text"
			/>
			<TextView 
				android:text="0"
				android:id="@+id/time_display_first_digit"
				android:textSize="80dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/white_text"
			/>
					
				</LinearLayout>
				<RelativeLayout 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content">
					<TextView 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content"
						android:text="Name of Exercise: "
						android:textSize="25dp"
						android:id="@+id/name_label"
						style="@style/white_text"
						android:layout_marginLeft="12dp"
        				android:layout_marginRight="12dp"
        				android:layout_marginTop="6dp"
        				android:layout_marginBottom="6dp"
        				android:textStyle="bold"
					/>
					
					<EditText 
						android:id="@+id/timer_name"
						android:text=""
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:layout_toRightOf="@id/name_label"
						android:layout_alignBaseline="@id/name_label"
						android:singleLine="true"
					/>
				</RelativeLayout>
							
			</LinearLayout>
			
			 <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >



        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <Button 
				style="@style/timer_button"
				android:text="1"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_one"
			/>
            <Button 
				style="@style/timer_button"
				android:text="2"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_two"
			/>
            <Button 
				style="@style/timer_button"
				android:text="3"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_three"
			/>
            
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
                        <Button 
				style="@style/timer_button"
				android:text="4"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_four"
			/>
            <Button 
				style="@style/timer_button"
				android:text="5"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_five"
			/>
            <Button 
				style="@style/timer_button"
				android:text="6"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_six"
			/>
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
                        <Button 
				style="@style/timer_button"
				android:text="7"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_seven"
			/>
            <Button 
				style="@style/timer_button"
				android:text="8"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_eight"
			/>
            <Button 
				style="@style/timer_button"
				android:text="9"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_nine"
			/>
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <Button 
				android:text="Clear"
				style="@style/timer_button"
				android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_clear"
			/>
			<Button 
				android:text="0"
				style="@style/timer_button"
				android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_zero"
			/>
			<Button 
				
				android:text="OK"
				style="@style/timer_button"
				android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
				android:id="@+id/button_ok"
			/>
			
        </TableRow>
        
    </TableLayout>
    
</LinearLayout>
