<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

    
    <ListView >
        
        
        
    </ListView>
    
	<LinearLayout
	    android:id="@+id/timer_container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical" >
		
		<TextView 
			android:text="Bow Pose"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/exercise_name"
			android:gravity="center"
			style="@style/timer_text"
			android:textSize="50dp"
			android:layout_weight="1"
		/>
		<TextView 
			android:text=""
			android:id="@+id/time_display"
			android:textSize="80dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
		/>

		<Button 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="Pause"
			android:textSize="80dp"
			android:id="@+id/pause_button"
			style="@style/timer_button"
			android:layout_weight="1"
		/>

		<TextView 
			android:text="Restart From:"
			android:textStyle="bold"
			android:id="@+id/reset_label"
			android:textSize="25dp"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:layout_centerHorizontal="true"/>
		
		<LinearLayout
		    android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:id="@+id/button_container"
			android:layout_below="@id/reset_label"
			>
			<Button 
				android:layout_width="fill_parent"
				android:id="@+id/reset_set_button" 
				android:text="Beginning"
				android:layout_height="wrap_content"
				android:layout_weight="1"

				style="@style/timer_button"
				></Button>
			
			<Button 
				android:layout_width="fill_parent" 
				android:text="Exercise"
				android:layout_height="wrap_content" 
				android:id="@+id/reset_exercise"
				android:layout_weight="1"
				style="@style/timer_button"
				>
			</Button>
		</LinearLayout>
	</LinearLayout>



</RelativeLayout >